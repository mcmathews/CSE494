<?xml version="1.0" encoding="utf-8"?>
<manifest package="edu.asu.bscs.mcmathe1.movielibraryandroid"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>

	<application
		android:name=".MovieLibraryApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name=".ui.LibraryActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".ui.AddEditMovieActivity">
		</activity>
		<activity android:name=".ui.SearchOmdbActivity">
		</activity>
		<activity android:name=".ui.MediaPlayerActivity"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
	</application>

</manifest>