<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: "
        android:id="@+id/titleView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year: "
        android:id="@+id/yearView" android:layout_below="@+id/titleView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rated: "
        android:id="@+id/ratedView" android:layout_below="@+id/yearView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released: "
        android:id="@+id/releasedView" android:layout_below="@+id/ratedView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Runtime: "
        android:id="@+id/runtimeView" android:layout_below="@+id/releasedView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genre: "
        android:id="@+id/genreView" android:layout_below="@+id/runtimeView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actors: "
        android:id="@+id/actorsView" android:layout_below="@+id/genreView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plot: "
        android:id="@+id/plotView" android:layout_below="@+id/actorsView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JSON: "
        android:id="@+id/jsonView" android:layout_below="@+id/plotView" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
</RelativeLayout>
